  <script>
    const PASSWORD = "1234";
    function checkPassword() {
      const input = document.getElementById("passwordInput").value;
      if (input === PASSWORD) {
        document.getElementById("passwordOverlay").style.display = "none";
        document.getElementById("appContainer").style.display = "block";
      } else {
        alert("ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ãŒé–“é•ã£ã¦ã„ã¾ã™ã€‚");
      }
    }

    let currentUserId = null;
    let userData = {};

    function showSection(id) {
      document.querySelectorAll(".section").forEach(s => s.classList.remove("visible"));
      document.getElementById(id).classList.add("visible");
    }

    function clearLoginInput() {
      document.getElementById("userIdInput").value = "";
    }

    function loadUserData() {
      const data = localStorage.getItem("bankData");
      userData = data ? JSON.parse(data) : {};
    }

    function saveUserData() {
      localStorage.setItem("bankData", JSON.stringify(userData));
    }

    function login(id = null) {
      const userId = id || document.getElementById("userIdInput").value.trim();
      if (!userId) return alert("IDã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚");
      loadUserData();
      if (!userData[userId]) return alert("ãã®IDã¯ç™»éŒ²ã•ã‚Œã¦ã„ã¾ã›ã‚“ã€‚");
      currentUserId = userId;
      document.getElementById("userNameDisplay").textContent = userData[userId].name;
      updateDisplay();
      showSection("accountSection");
    }

    function logout() {
      currentUserId = null;
      showSection("menuSection");
      clearLoginInput();
    }

    function createAccount() {
      const id = document.getElementById("newIdInput").value.trim();
      const name = document.getElementById("newNameInput").value.trim();
      if (!id || !name) return alert("IDã¨åå‰ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚");
      loadUserData();
      if (userData[id]) return alert("ã“ã®IDã¯ã™ã§ã«ä½¿ã‚ã‚Œã¦ã„ã¾ã™ã€‚");
      if (Object.values(userData).some(u => u.name === name)) return alert("ã“ã®åå‰ã¯ã™ã§ã«ä½¿ã‚ã‚Œã¦ã„ã¾ã™ã€‚");
      userData[id] = { name, balance: 0, logs: [] };
      saveUserData();
      login(id);
    }

    function updateDisplay() {
      const data = userData[currentUserId];
      document.getElementById("balance").textContent = data.balance;
      document.getElementById("log").innerHTML = data.logs.map(log => `<div>${log}</div>`).reverse().join("");
    }

    function deposit(amount) {
      const user = userData[currentUserId];
      user.balance += amount;
      user.logs.push(`[${getTime()}] +${amount} ãƒŸã‚¹ã‚¿ãƒ¼ å…¥é‡‘`);
      saveUserData();
      updateDisplay();
    }

    function withdraw(amount) {
      const user = userData[currentUserId];
      if (user.balance >= amount) {
        user.balance -= amount;
        user.logs.push(`[${getTime()}] -${amount} ãƒŸã‚¹ã‚¿ãƒ¼ å‡ºé‡‘`);
      } else {
        user.logs.push(`[${getTime()}] å‡ºé‡‘å¤±æ•—ï¼šæ®‹é«˜ä¸è¶³ (${amount})`);
      }
      saveUserData();
      updateDisplay();
    }

    function getTime() {
      return new Date().toLocaleTimeString();
    }

    function startScanner() {
      const reader = new Html5Qrcode("reader");
      reader.start({ facingMode: "environment" }, { fps: 10, qrbox: 200 }, (decodedText) => {
        reader.stop();
        login(decodedText.trim());
      });
    }

    function generateQRCode() {
      const canvas = document.getElementById("qrcodeCanvas");
      QRCode.toCanvas(canvas, currentUserId, function (error) {
        if (error) console.error(error);
      });
    }

    function showAllQRCodes() {
      loadUserData();
      const list = document.getElementById("qrList");
      list.innerHTML = "";
      Object.entries(userData).forEach(([id, info]) => {
        const div = document.createElement("div");
        const label = document.createElement("div");
        label.textContent = `${info.name} (${id})`;
        const canvas = document.createElement("canvas");
        QRCode.toCanvas(canvas, id);
        div.appendChild(label);
        div.appendChild(canvas);
        list.appendChild(div);
      });
      showSection("qrListSection");
    }

    function downloadData() {
      const blob = new Blob([JSON.stringify(userData, null, 2)], { type: "application/json" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = "mr_bank_data.json";
      a.click();
    }

    function uploadData(event) {
      const file = event.target.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = function (e) {
        try {
          const data = JSON.parse(e.target.result);
          userData = data;
          saveUserData();
          alert("ãƒ‡ãƒ¼ã‚¿ã‚’èª­ã¿è¾¼ã¿ã¾ã—ãŸã€‚");
        } catch (e) {
          alert("èª­ã¿è¾¼ã¿å¤±æ•—ï¼š" + e);
        }
      };
      reader.readAsText(file);
    }

    loadUserData();
  </script>
